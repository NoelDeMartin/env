{

    // General purpose
    "Public method": {
        "prefix": "met",
        "body": [
            "public $1($2): $3 {",
            "    $0",
            "}"
        ],
        "description": "Create a public method"
    },
    "Protected method": {
        "prefix": "pmet",
        "body": [
            "protected $1($2): $3 {",
            "    $0",
            "}"
        ],
        "description": "Create a protected method"
    },
    "Private method": {
        "prefix": "prmet",
        "body": [
            "private $1($2): $3 {",
            "    $0",
            "}"
        ],
        "description": "Create a private method"
    },
    "Getter method": {
        "prefix": "gmet",
        "body": [
            "public get $1($2): $3 {",
            "    $0",
            "}"
        ],
        "description": "Create a getter method"
    },
    "Constructor method": {
        "prefix": "cmet",
        "body": [
            "constructor($1) {",
            "    $0",
            "}"
        ],
        "description": "Create a constructor method"
    },
    "Function": {
        "prefix": "fun",
        "body": [
            "function $1($2): $3 {",
            "    $0",
            "}"
        ],
        "description": "Create a function"
    },
    "Async function": {
        "prefix": "afun",
        "body": [
            "async function $1($2): Promise<$3> {",
            "    $0",
            "}"
        ],
        "description": "Create an asynchronous function"
    },
    "Console log": {
        "prefix": "log",
        "body": [
            "console.log($1);"
        ],
        "description": "Console log statement"
    },

    // Testing
    "Test suite": {
        "prefix": "testsuite",
        "body": [
            "import { it, describe, expect } from 'vitest';",
            "",
            "describe('${1:$TM_FILENAME_BASE}', () => {",
            "",
            "    $0",
            "",
            "});",
            ""
        ],
        "description": "Create a new test suite using Vitest"
      },
      "Test": {
        "prefix": "test",
        "body": [
            "it('$1', () => {",
            "    // Arrange",
            "    $0",
            "",
            "    // Act",
            "",
            "    // Assert",
            "});"
        ],
        "description": "Create a new test case using Vitest"
    },
    "Asynchronous Test": {
        "prefix": "atest",
        "body": [
            "it('$1', async () => {",
            "    // Arrange",
            "    $0",
            "",
            "    // Act",
            "",
            "    // Assert",
            "});"
        ],
        "description": "Create a new asynchronous test case using Vitest"
    },
    "Simple Test": {
        "prefix": "stest",
        "body": [
            "it('$1', () => {",
            "    $0",
            "});"
        ],
        "description": "Create a new simple test case using Vitest"
    },
    "Arrange, Act, Assert": {
        "prefix": "aaa",
        "body": [
            "// Arrange",
            "$0",
            "",
            "// Act",
            "",
            "// Assert"
        ],
        "description": "Create an Arrange, Act, Assert block of comments"
    },

}

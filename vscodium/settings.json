{

    /**
     * Better Defaults
     **/
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "workbench.activityBar.orientation": "vertical",
    "editor.copyWithSyntaxHighlighting": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editor.enablePreview": false,
    "window.newWindowDimensions": "inherit",
    "files.trimTrailingWhitespace": true,
    "diffEditor.renderSideBySide": false,
    "editor.stickyScroll.enabled": false,
    "editor.snippetSuggestions": "top",
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "search.searchOnType": false,
    "editor.codeActionsOnSave": { "source.fixAll": true },
    "eslint.onIgnoredFiles": "warn",
    "editor.minimap.enabled": true,
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.terminal.focusNext",
        "workbench.action.terminal.focusPrevious",
        "workbench.action.toggleSidebarVisibility",
        "workbench.view.explorer"
    ],

    /**
     * Silence The Noise
     */
    "update.mode": "none",
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.editor.showTabs": false,
    "editor.lineNumbers": "off",
    "scm.diffDecorations": "none",
    "scm.showHistoryGraph": false,
    "editor.matchBrackets": "never",
    "workbench.tips.enabled": false,
    "editor.colorDecorators": false,
    "git.decorations.enabled": false,
    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": false,
    "editor.selectionHighlight": true,
    "editor.guides.indentation": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": true,
    "editor.accessibilitySupport": "off",
    "problems.decorations.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    "vsicons.dontShowNewVersionMessage": true,
    "vue.editor.reactivityVisualization": false,
    "vue.editor.templateInterpolationDecorators": false,
    "editor.gotoLocation.multipleReferences": "gotoAndPeek",
    "editor.gotoLocation.multipleDefinitions": "gotoAndPeek",
    "editor.gotoLocation.multipleDeclarations": "gotoAndPeek",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.gotoLocation.multipleImplementations": "gotoAndPeek",
    "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "vscode_custom_css.imports": ["file://[projects-path]/env/vscodium/custom.css"],

    /**
     * Typography & Themes
     **/
    "workbench.iconTheme": "vscode-icons",
    "editor.fontFamily": "MonoLisa",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.lineHeight": 35,
    "editor.suggestFontSize": 15,
    "editor.suggestLineHeight": 28,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.lineHeight": 1.5,

    /**
     * Find
     **/
    "search.useIgnoreFiles": true,
    "search.exclude": {
        "**/public/{[^i],?[^n]}*": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/_ide_helper.php": true,
        "**/composer.lock": true,
        "**/package-lock.json": true,
        "**/pnpm-lock.yaml": true,
        "storage": true,
        ".phpunit.result.cache": true
    },

    /**
     * I18n
     */
    "i18n-ally.keystyle": "nested",
    "i18n-ally.localesPaths": ["src/lang"],
    "i18n-ally.sortKeys": true,

    /**
     * Language Specifics
     **/
    "php.suggest.basic": false,
    "php.validate.enable": false,
    "typescript.preferences.quoteStyle": "single",
    "typescript.suggest.autoImports": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "emmet.includeLanguages": {
        "blade": "html",
        "vue-html": "html",
        "vue": "html"
    },
    "togglequotes.chars": [
        "\"",
        "'",
        "`"
    ],

    /**
     * Dictionary
     **/
    "cSpell.userWords": [
        "Aerogel",
        "autoload",
        "Bootup",
        "Chainable",
        "chainer",
        "dont",
        "Falsish",
        "globbing",
        "Heisig",
        "Histoire",
        "imdb",
        "Inrupt",
        "JSONLD",
        "Laravel",
        "Mixins",
        "noeldemartin",
        "oidc",
        "opengraph",
        "pepicons",
        "Pinia",
        "rdfs",
        "rdfs",
        "snackbars",
        "soukai",
        "SPARQL",
        "Stringable",
        "tailwindcss",
        "themoviedb",
        "Timeoutable",
        "TMDB",
        "tviso",
        "umai",
        "Uncapitalize",
        "vite",
        "vitejs",
        "vuex",
    ],

    /**
     * Extension settings
     **/
    "simple-project-switcher.directory": "[projects-path]",

    // Binary installed from https://commondatastorage.googleapis.com/chromium-browser-snapshots/index.html?prefix=Linux_x64/1075656/
    "browse-lite.chromeExecutable": "/etc/chrome-testing/chrome",

}
